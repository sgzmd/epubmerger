<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReorderBooksActivity">

  <com.ernestoyaquello.dragdropswiperecyclerview.DragDropSwipeRecyclerView
      android:id="@+id/book_list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:minHeight="200dp"
      app:item_layout="@layout/book_item_view"
      app:divider="@drawable/list_divider"/>

  <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Merge books"
          app:layout_constraintBottom_toBottomOf="@id/book_list" android:id="@+id/merge_files_button" android:layout_marginTop="80dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>